<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<!-- 共分为三个布局 -->
	<!-- 左侧正确题数、正确率和用时 -->
	<RelativeLayout 
	    android:layout_weight="3"
	    android:layout_height="fill_parent"
	    android:layout_width="180dp"
	    android:background="@color/white">
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:layout_marginLeft="60dp"
	        android:layout_marginRight="60dp"
	        android:layout_marginTop="50dp"
	        android:layout_marginBottom="50dp"
	        android:layout_centerHorizontal="true"
	        android:orientation="vertical">
	        
	        <!-- 正确题数布局 -->
	        <RelativeLayout 
	            android:layout_width="240dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal">
	            
	            <ImageView 
	                android:id="@+id/home_listen_qusresult_rightNumIcon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/home_listen_qusresult_rightnumicon"/>
	            
	            <TextView 
	                android:id="@+id/home_listen_qusresult_rightNumNum"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="50sp"
	                android:layout_alignParentRight="true"
	                android:text="6/8"
	                android:layout_alignBottom="@id/home_listen_qusresult_rightNumIcon"/>
	            
	            <View
	                android:id="@+id/home_listen_qusresult_rightNumLine"
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:background="@color/home_listen_qus_item_darkline"
	                android:layout_below="@id/home_listen_qusresult_rightNumIcon"
	                android:layout_marginTop="10dp"/>
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/home_listen_qusResult_rightNumTitle"
	                android:textSize="25sp"
	                android:textColor="@color/home_listen_qusresult_darktext"
	                android:layout_alignParentRight="true"
	                android:layout_below="@id/home_listen_qusresult_rightNumLine"
	                android:layout_marginTop="10dp"/>
	        </RelativeLayout>
	        
	        <!-- 正确率 -->
	        <RelativeLayout 
	            android:layout_width="240dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="50dp">
	            
	            <ImageView 
	                android:id="@+id/home_listen_qusresult_rightRateIcon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/home_listen_qusresult_rightrateicon"/>
	            
	            <TextView 
	                android:id="@+id/home_listen_qusresult_rightRateNum"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="50sp"
	                android:layout_alignParentRight="true"
	                android:text="81%"
	                android:layout_alignBottom="@id/home_listen_qusresult_rightRateIcon"/>
	            
	            <View
	                android:id="@+id/home_listen_qusresult_rightRateLine"
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:background="@color/home_listen_qus_item_darkline"
	                android:layout_below="@id/home_listen_qusresult_rightRateIcon"
	                android:layout_marginTop="10dp"/>
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/home_listen_qusResult_rightRateTitle"
	                android:textSize="25sp"
	                android:textColor="@color/home_listen_qusresult_darktext"
	                android:layout_alignParentRight="true"
	                android:layout_below="@id/home_listen_qusresult_rightRateLine"
	                android:layout_marginTop="10dp"/>
	        </RelativeLayout>
	        
	        <!-- 用时 -->
	        <RelativeLayout 
	            android:layout_width="240dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:layout_marginTop="50dp">
	            
	            <ImageView 
	                android:id="@+id/home_listen_qusresult_usetimeIcon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/home_listen_qusresult_testusetimeicon"/>
	            
	            <TextView 
	                android:id="@+id/home_listen_qusresult_usetimeTime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="50sp"
	                android:layout_alignParentRight="true"
	                android:text="15'01''"
	                android:layout_alignBottom="@id/home_listen_qusresult_usetimeIcon"/>
	            
	            <View
	                android:id="@+id/home_listen_qusresult_usetimeLine"
	                android:layout_width="fill_parent"
	                android:layout_height="2dp"
	                android:background="@color/home_listen_qus_item_darkline"
	                android:layout_below="@id/home_listen_qusresult_usetimeIcon"
	                android:layout_marginTop="10dp"/>
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/home_listen_qusResult_UsetimeTitle"
	                android:textSize="25sp"
	                android:textColor="@color/home_listen_qusresult_darktext"
	                android:layout_alignParentRight="true"
	                android:layout_below="@id/home_listen_qusresult_usetimeLine"
	                android:layout_marginTop="10dp"/>
	        </RelativeLayout>
	    </LinearLayout>
	    
	</RelativeLayout>
	
	<View 
	    android:layout_height="fill_parent"
	    android:layout_width="2dp"
	    android:background="@color/home_listen_qus_item_darkline"/>
	
	<!-- 错题详情 -->
	<RelativeLayout 
	    android:layout_weight="5"
	    android:layout_height="fill_parent"
	    android:layout_width="300dp"
	    android:background="@color/set_fragment_bcg">
	    
	    <TextView 
	        android:id="@+id/home_listen_qusresult_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="15dp"
	        android:layout_marginRight="20dp"
	        android:textSize="25sp"
	        android:textColor="@color/home_listen_qusresult_darktext"
	        android:text="2014-9-01"/>
	    
	    <TextView 
	        android:id="@+id/home_listen_qusresult_wrongDetail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/home_listen_qusResult_wrongDetail"
	        android:textSize="40sp"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/home_listen_qusresult_date"/>
	    
	    <GridView 
	        android:id="@+id/home_listen_qusresult_gridview"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/home_listen_qusresult_wrongDetail"
	        android:layout_marginTop="40dp"
	        android:layout_marginBottom="40dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:numColumns="auto_fit"
	        android:columnWidth="100dp"
	        android:stretchMode="columnWidth"
	        android:verticalSpacing="30dp"
	        android:horizontalSpacing="10dp"></GridView>
	   
	</RelativeLayout>
	
	<View 
	    android:layout_height="fill_parent"
	    android:layout_width="2dp"
	    android:background="@color/home_listen_qus_item_darkline"/>
	
	<!-- 返回列表和查看错题 -->
	<LinearLayout 
	    android:layout_weight="1"
	    android:layout_height="fill_parent"
	    android:layout_width="60dp"
	    android:background="@color/white"
	    android:orientation="vertical">
	    
	    <LinearLayout 
	        android:id="@+id/home_listen_qusresult_returncourselist_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:background="@drawable/home_listen_qusresult_btnbcg_selector"
	        >
	        
	        
	        <ImageView 
	            android:id="@+id/home_listen_qusresult_returncourselist_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/home_listen_qusresult_returncourselist_icon_selector"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="80dp"
		        android:duplicateParentState="true"/>
	    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/home_listen_qusResult_returncourselist_text"
		        android:layout_marginTop="20dp"
		        android:layout_gravity="center_horizontal"
		        android:textSize="25sp"/>
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:id="@+id/home_listen_qusresult_toNextWork_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:background="@drawable/home_listen_qusresult_gotonextwork_selector"
	        android:visibility="gone">
	        
	        
	        <ImageView 
	            android:id="@+id/home_listen_qusresult_tonextwork_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/home_listen_qusresult_tonextwork_icon"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="200dp"
		        android:duplicateParentState="true"/>
	    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/home_listen_qusResult_tonextwork_text"
		        android:layout_marginTop="20dp"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginLeft="20dp" 
		        android:layout_marginRight="20dp"
		        android:textSize="25sp"/>
	    </LinearLayout>
	    
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="2dp"
	        android:background="@color/home_listen_qus_item_darkline"
	        android:layout_gravity="center"/>
	    
	    <LinearLayout 
	        android:id="@+id/home_listen_qusresult_reviewwrong_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:background="@drawable/home_listen_qusresult_btnbcg_selector">
		    
	        <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/home_listen_qusresult_reviewwrong_icon_selector"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="80dp"/>
	    
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/home_listen_qusResult_reviewwrong_text"
		        android:textSize="25sp"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="20dp"
		        android:layout_marginBottom="40dp"/>
		</LinearLayout>
  
	</LinearLayout>
</LinearLayout>
