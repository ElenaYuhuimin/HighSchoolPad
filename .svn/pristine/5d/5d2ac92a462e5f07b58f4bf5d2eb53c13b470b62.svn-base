<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_courselist_classlist_rl"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/home_courselist_classitem_selector" >
    
    <ImageView
        android:id="@+id/word_courselist_classlist_notlearn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:src="@drawable/word_courselist_notlearn" />
    
    <ImageView
        android:id="@+id/word_courselist_classlist_learned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:visibility="gone"
        android:src="@drawable/word_courselist_learned" />
    
    <ImageView
        android:id="@+id/word_courselist_classlist_learning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:src="@drawable/word_courselist_learning" />
    
    <TextView 
        android:id="@+id/word_courselist_classlist_nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="85dp"
        android:singleLine="true"
        android:text="text"
        android:textSize="30sp"
        android:textColor="@color/courselist_classitem_nametext"/>
    
    
    <ImageView 
        android:id="@+id/word_courselist_classlist_img_unclick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/word_courselist_classitem_img_unclick"/>
    
    <ImageView 
        android:id="@+id/word_courselist_classlist_img_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/word_courselist_classitem_img_click"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/word_courselist_classlist_wordnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="10个单词"
        android:textSize="20sp"
        android:textColor="@color/word_lightgrey"
        android:layout_marginRight="80dp"/>
    
    
    

</RelativeLayout>
