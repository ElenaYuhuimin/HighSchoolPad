<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/test_background">
    
    
      <TextView
            android:id="@+id/test_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="TextView" />
      
      <TextView
            android:id="@+id/test_qus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_gravity="center"
            android:layout_marginTop="44dp"
            android:textSize="17sp"
            android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
            android:text="TextView" />

       <com.storm.fliplayout.lib.FlipLayout
            android:id="@+id/flipLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:background="@drawable/border_blue"
                android:textSize="15sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:padding="15dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#ffffff"      
                android:visibility="gone" />
        </com.storm.fliplayout.lib.FlipLayout>

        <com.storm.fliplayout.lib.FlipLayout
            android:id="@+id/flipLayout2"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:background="@drawable/border_blue"
                android:textSize="15sp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:padding="15dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#ffffff"               
                android:visibility="gone" />
        </com.storm.fliplayout.lib.FlipLayout>

        <com.storm.fliplayout.lib.FlipLayout
            android:id="@+id/flipLayout3"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
               	android:textSize="15sp"
                android:padding="15dp"
                android:background="@drawable/border_blue"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </com.storm.fliplayout.lib.FlipLayout>
        
        
        
        <com.storm.fliplayout.lib.FlipLayout
            android:id="@+id/flipLayout4"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="25dp"
            android:visibility="gone"
            android:layout_marginRight="25dp"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:padding="15dp"
                android:background="@drawable/border_blue"
                android:gravity="center"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="15sp"
                android:textColor="#ffffff"              
                android:visibility="gone" />
        </com.storm.fliplayout.lib.FlipLayout>
        
	
</LinearLayout>
