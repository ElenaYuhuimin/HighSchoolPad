<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
    
    <RelativeLayout
	   android:layout_width="match_parent"
	   android:layout_height="match_parent" 
	   android:id="@+id/set_fragment_font_rl" 
	   android:background="@color/set_fragment_bcg"
	   android:paddingBottom="30dp">
    
	    <!-- 调节字号大小 -->
	    <TextView 
	        android:id="@+id/set_fragment_font_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/set_fragment_font_title"
	        android:textSize="25sp"
	        android:textColor="#7c7c7c"
	        android:layout_marginLeft="40dp"
	        android:layout_marginTop="30dp"/>
    
	    <!-- 大号 -->
	    <TextView
	        android:id="@+id/set_fragment_font_bigbtn"
	        android:layout_width="120dp"
	        android:layout_height="60dp"
	        android:layout_alignLeft="@+id/set_fragment_font_title"
	        android:layout_below="@+id/set_fragment_font_title"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/set_fragment_font_titlebtn_unpressed_shape" 
	        android:text = "@string/set_fragment_font_bigbtn"
	        android:textSize="35sp"
	        android:textColor="@color/set_list_text"
	        android:paddingTop="5dp"
	        android:paddingLeft="23dp"/>
    
	    <!-- 中号 -->
	    <TextView
	        android:id="@+id/set_fragment_font_middlebtn"
	        android:layout_width="120dp"
	        android:layout_height="60dp"
	        android:layout_alignBottom="@id/set_fragment_font_bigbtn"
	        android:layout_below="@+id/set_fragment_font_title"
	        android:layout_toRightOf="@id/set_fragment_font_bigbtn"
	        android:layout_marginLeft="40dp"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/set_fragment_font_titlebtn_unpressed_shape" 
	        android:text = "@string/set_fragment_font_middlebtn"
	        android:textSize="30sp"
	        android:textColor="@color/set_list_text"
	        android:paddingTop="8dp"
	        android:paddingLeft="29dp"/>
    
	    <!-- 小号 -->
	    <TextView
	        android:id="@+id/set_fragment_font_smallbtn"
	        android:layout_width="120dp"
	        android:layout_height="60dp"
	        android:layout_alignBottom="@id/set_fragment_font_bigbtn"
	        android:layout_below="@+id/set_fragment_font_title"
	        android:layout_toRightOf="@id/set_fragment_font_middlebtn"
	        android:layout_marginLeft="40dp"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/set_fragment_font_titlebtn_unpressed_shape" 
	        android:text = "@string/set_fragment_font_smallbtn"
	        android:textSize="25sp"
	        android:textColor="@color/set_list_text"
	        android:paddingTop="12dp"
	        android:paddingLeft="34dp"/>
    
	    <!-- 大号文字 -->
	    <RelativeLayout 
	        android:id="@+id/set_fragment_font_bigtext_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/set_fragment_font_text_shape"
	        android:layout_alignLeft="@id/set_fragment_font_bigbtn"
	        android:layout_below="@id/set_fragment_font_bigbtn"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="40dp">
        
	        <TextView 
	            android:id="@+id/set_fragment_font_bigtext_en"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="35sp"
	            android:text="@string/set_fragment_font_bigtext_en"
	            android:textColor="@color/set_list_text"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"/>
	        
	        <TextView 
	            android:id="@+id/set_fragment_font_bigtext_cn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="30sp"
	            android:text="@string/set_fragment_font_bigtext_cn"
	            android:layout_below="@id/set_fragment_font_bigtext_en"
	            android:textColor="#939393"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"
	            />
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="——（大号）"
	            android:textSize="30sp"
	            android:textColor="#939393"
	            android:layout_below="@id/set_fragment_font_bigtext_cn"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:paddingBottom="15dp"/>
	        
	    </RelativeLayout>
    
	    <!-- 中号文字 -->
	    <RelativeLayout 
	        android:id="@+id/set_fragment_font_middletext_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/set_fragment_font_text_shape"
	        android:layout_alignLeft="@id/set_fragment_font_bigbtn"
	        android:layout_below="@id/set_fragment_font_bigtext_rl"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="60dp">
	        
	        <TextView 
	            android:id="@+id/set_fragment_font_middletext_en"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="30sp"
	            android:text="@string/set_fragment_font_middletext_en"
	            android:textColor="@color/set_list_text"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"/>
	        
	        <TextView 
	            android:id="@+id/set_fragment_font_middeletext_cn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="25sp"
	            android:text="@string/set_fragment_font_middletext_cn"
	            android:layout_below="@id/set_fragment_font_middletext_en"
	            android:textColor="#939393"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"/>
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="——（中号）"
	            android:textSize="25sp"
	            android:textColor="#939393"
	            android:layout_below="@id/set_fragment_font_middeletext_cn"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:paddingBottom="15dp"/>
	        
	    </RelativeLayout>
	    
	    <!-- 小号文字 -->
	    <RelativeLayout 
	        android:id="@+id/set_fragment_font_smalltext_rl"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/set_fragment_font_text_shape"
	        android:layout_alignLeft="@id/set_fragment_font_bigbtn"
	        android:layout_below="@id/set_fragment_font_middletext_rl"
	        android:layout_marginTop="20dp"
	        android:layout_marginRight="60dp">
	        
	        <TextView 
	            android:id="@+id/set_fragment_font_smalltext_en"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="25sp"
	            android:text="@string/set_fragment_font_smalltext_en"
	            android:textColor="@color/set_list_text"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"/>
	        
	        <TextView 
	            android:id="@+id/set_fragment_font_smalltext_cn"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="20sp"
	            android:text="@string/set_fragment_font_smalltext_cn"
	            android:layout_below="@id/set_fragment_font_smalltext_en"
	            android:textColor="#939393"
	            android:layout_marginTop="15dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginRight="15dp"/>
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="——（小号）"
	            android:textSize="20sp"
	            android:textColor="#939393"
	            android:layout_below="@id/set_fragment_font_smalltext_cn"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="15dp"
	            android:paddingBottom="15dp"/>
	        
	    </RelativeLayout>

</RelativeLayout>
</ScrollView>

