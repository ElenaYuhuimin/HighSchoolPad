<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical" 
    android:background="@color/set_fragment_bcg">
    
    <View 
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/home_listen_qus_item_darkline"
        android:layout_alignParentTop="true"/>
    
    <Button 
        android:id="@+id/home_listen_qus_qusfootview_summit"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/home_listen_qus_qusfootview_imvselector"
        android:layout_centerInParent="true"
        android:text="@string/set_fragment_feedback_commit"
        android:textColor="@color/white"
        android:textSize="35sp"/>

</RelativeLayout>
