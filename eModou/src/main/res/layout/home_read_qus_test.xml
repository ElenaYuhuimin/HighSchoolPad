<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    
    <RelativeLayout 
        android:id="@+id/home_read_qus_test_qusList_Rl"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="9">
        
        <ListView 
	        android:id="@+id/home_read_qus_test_qusList"
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:divider="@null"> 
        </ListView>
    </RelativeLayout>
    
    
    <View 
        android:id="@+id/home_read_qus_test_line"
        android:layout_width="2dp"
        android:layout_height="fill_parent"
        android:background="@color/home_listen_qus_item_darkline"
        android:layout_toRightOf="@id/home_read_qus_test_qusList_Rl"/>
    
    <RelativeLayout 
        android:id="@+id/home_read_qus_indicatorList_Rl"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">
        
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            
            <ListView 
		        android:id="@+id/home_read_qus_test_indicatorList"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:divider="@null"
		        android:dividerHeight="20dp"
		        android:descendantFocusability="blocksDescendants"
		        android:layout_gravity="center">
	    	</ListView>
            
        </LinearLayout>
	    
    </RelativeLayout>
    

</LinearLayout>
